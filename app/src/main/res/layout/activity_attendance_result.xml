<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="kr.devy.cest.client.AttendanceResultActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/attendance_result_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="출결관리"
            android:textColor="#757575"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/attendance_result_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="물리전자"
                android:textSize="15sp"
                android:textColor="#009688"
                android:textStyle="bold" />
          <ImageView
              android:layout_width="15dp"
              android:layout_height="15dp"
              android:layout_marginLeft="4dp"
              android:layout_marginRight="4dp"
              android:scaleType="fitCenter"
              android:src="@drawable/gray_arrow_right"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/attendance_result_tv_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#757575"
                    android:text="2015-7-13"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/attendance_result_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9E9E9E"
                    android:text="00:00:00"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


    <ExpandableListView
        android:id="@+id/attendance_result_el"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:divider="#FFFFFF"
        android:groupIndicator="@android:color/transparent">

    </ExpandableListView>
</LinearLayout>
